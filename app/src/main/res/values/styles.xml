<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="title">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="cardTitle">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="cardText">
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="normalText">
        <item name="android:textColor">#333</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>

    <style name="label">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textColor">#333</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="labelValue" parent="label">
        <item name="android:paddingRight">16dp</item>
        <item name="android:textColor">#888</item>
    </style>

    <style name="iconText">
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <style name="formItem">
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="buttonPrimary">
        <item name="android:background">@drawable/button_primary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="buttonSecondary">
        <item name="android:background">@drawable/button_accent_color</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="separator">
        <item name="android:background">#e8e8e8</item>
    </style>

</resources>
